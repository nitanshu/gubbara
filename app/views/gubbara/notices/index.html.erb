<div class="panel panel-default">
  <div class="panel-heading text-center">All Notices !!</div>
  <table class="table">
    <thead>
    <tr>
      <th>id</th>
      <th>message</th>
      <th>active</th>
      <th>background_color</th>
      <th>font_color</th>
      <th>font_size</th>
      <th>text_align</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>

    <% @notices.all.each do |notice| %>
        <tr>
          <td><%= notice.id %></td>
          <td><%= notice.message %></td>
          <td><%= notice.active %></td>
          <td><%= notice.background_color %></td>
          <td><%= notice.font_color %></td>
          <td><%= notice.font_size %></td>
          <td><%= notice.text_align %></td>
          <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
